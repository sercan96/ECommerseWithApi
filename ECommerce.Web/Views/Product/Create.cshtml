@model Product

<h2>Ürün Ekle</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">Name</label>
        <input asp-for="ProductName" name="ProductName" id="ProductName" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UnitPrice" class="form-label">UnitPrice</label>
        <input asp-for="UnitPrice" name="UnitPrice" id="UnitPrice" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="UnitsInStock" class="form-label">UnitsInStock</label>
        <input asp-for="UnitsInStock" name="UnitsInStock" id="UnitsInStock" class="form-control" />
    </div>

    <div class="mb-3">
    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>

</form>